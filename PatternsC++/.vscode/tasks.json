{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run Active C++ File",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15 -std=c++17 -o ${fileBasenameNoExtension} \"${file}\" && ./\"${fileBasenameNoExtension}\" < \"${workspaceFolder}/input.txt\" > \"${workspaceFolder}/output.txt\"",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "close": true
            },
            "problemMatcher": [],
            "condition": "endsWith(file, '.cpp')"
        }
    ]
}